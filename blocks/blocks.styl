$page-width = 1003px

$blue-d = #334352
$blue-l = #465867
$brown-l = #c79a6b
$grey-l = #d2d6d9

clearfix()
  &::after,
  &::before
    content: ' '
    display: table
    clear: both

*
  padding: 0
  margin: 0

html
body
  width: 100%
  height: 100%

body
  font: 80% Arial, sans-serif
  min-width: $page-width

a
  transition: color 0.25s ease-out

@import('fonts')
@import('header/header')
@import('navigation/navigation')
