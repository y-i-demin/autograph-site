a
  transition: color 0.25s ease-out

h1,
h3
  font-weight: normal
  color: $blue-d

h1,
h2
  font-family: plumb-bo
  text-transform: uppercase

h1
  font-size: 62px
  max-width: 610px

h2
  font-weight: normal
  font-size: 40px

  margin-bottom: 40px

  color: $grey-xxd

h3
  font-size: 32px
  max-width: 510px

p
  margin-bottom: 25px

a
  color: $brown-l

  &:hover
    text-decoration: none

.g-hidden
  display: none !important

.sublink
  z-index: 10
  position: absolute
  bottom: -16px
  right: 0

  font-size: 14px

  text-transform: uppercase

  &-wrap
    position: relative

.row
  width: $page-width
  margin: 0 auto

  box-sizing: border-box

  clearfix()

  &-shift
    padding: 0 100px

    &__main
      padding: 40px 0 100px 100px

    &__warranty
      max-width: 645px
      margin-right: 70px
      padding-right: 0px

    &__wholesalers
      padding: 18px 0 0 100px
      max-width: 515px

  &-stole-about
    padding-top: 30px
    max-width: 470px

    border-top: 1px solid $grey-l

  &__contacts
    padding-bottom: 35px
    border-bottom: 7px solid $blue-d

  &__main
    font-size: 27px

    text-transform: uppercase
    color: #fff

.goods
  &-about
    font-family: plumb-bo
    font-weight: normal
    font-size: 22px

    max-width: 570px

    color: $grey-xxd

    &__accs
      max-width: 100%

  &-link
    color: #fff
    text-decoration: none
    border-bottom: 1px solid $brown-l

    &:hover,
    &:active
      border-color: #fff

  &-info
    padding-top: 375px

    &__covers
      background: no-repeat left top url('../i/seat-covers.png')

    &__stole
      background: no-repeat left top url('../i/seat-stole.jpg')

  &-behaviour
    position: relative

    font-size: 19px

    min-height: 365px
    max-width: 500px
    padding-left: 115px
    padding-top: 50px

    color: $grey-xxd

    &__stole
      padding: 30px 0 0

    &-title
      font-family: plumb-bo
      font-size: 22px

      text-transform: uppercase

      &__offset
        margin-bottom: 13px

    &-list
      list-style: none

    &-item
      max-width: 370px
      margin-bottom: 30px

    &__stole &-item
      float: left

      width: 230px
      padding-top: 125px
      margin: 0 0 0 40px

      &:first-child
        margin-left: 0

    &-subitem
      position: relative
      list-style: none

      margin-top: 20px
      padding-left: 15px

      &::before
        position: absolute
        left: 0
        top: -25px

        font-size: 40px

        display: block

        color: $brown-l
        content: '.'

    &-img
      position: absolute
      left: -260px
      top: 0

      display: block

      width: 336px
      height: 455px

      background-repeat: no-repeat
      background-position: right top

      &__cover
        background-image: url('../i/goods-cover.png')

      &__accs
        height: 505px
        background-position: right 50px
        background-image: url('../i/goods-accs.jpg')

    &-icon
      padding-left: 70px

      background-repeat: no-repeat
      background-position: left top

      &__cover
        background-image: url('../i/behaviours-icons-cover.png')

        &_2
          height: 60px
          padding-top: 10px
          background-position: left -120px

        &_3
          height: 77px
          padding-top: 5px
          background-position: left -220px

      &__stole
        background-image: url('../i/behaviours-icons-stole.jpg')

        &_2
          background-position: -310px top

    &__stole &-icon
      padding-left: 0

.incut
  font-size: 19px

  margin: 30px 0
  padding: 30px 0

  color: #fff

  background-repeat: no-repeat
  background-position: center

  &__covers
    background-image: url('../i/incut-covers.png')

  &__stole
    background-image: url('../i/incut-stole.jpg')

.warranty
  font-size: 38px

  margin: 80px 0

  color: $grey-xxd
  text-align: center

  &-separator
    height: 15px
    margin-bottom: 40px

    background-color: $grey-xl

  & B
    display: block

    font-family: plumb-bo
    font-weight: normal

    text-transform: uppercase

  &-limit
    font-family: plumb-bo
    font-size: 54px

    margin: 25px 0 50px
    padding: 1px 0 10px 0

    color: $blue-d

    border-top: 1px solid $grey-l
    border-bottom: 6px solid $grey-l

  &-for-all
    position: relative
    top: 8px

    font-family: plumb-re
    font-size: 33px

    white-space: nowrap

  &-license
    float: right
    margin-top: 23px

    & IMG
      display: block

    &-description
      font-size: 14px
      margin-top: 20px

.columns
  clearfix()

  &-item
    float: left
    width: 300px
    margin-left: (($page-width - @width * 3) / 2)

    &:first-child
      margin-left: 0 !important

  &-link:link,
  &-link:visited
    font-size: 14px

    text-transform: uppercase
    color: $brown-l

    &:hover,
    &:active
      text-decoration: none

  &-stole
    width: 680px
    margin: 0 auto

  &-stole &-item
    margin-left: 80px

.covers-for,
.stole-for
  list-style: none

  clearfix()

  & LI
    float: left
    min-width: 220px
    margin-bottom: 20px

.stole-for
  & LI
    padding-top: 210px
    margin-right: 20px
    width: 195px
    min-width: 0

    background-repeat : no-repeat
    background-image: url('../i/incut-stole-icons.png')

  &__first
    background-position: left top

  &__second
    background-position: -210px top

  &__third
    width: 215px !important
    background-position: -425px top

.downloads
  font-size: 14px

  float: right

  width: 275px
  margin-left: 20px

  clearfix()

  &-title
    font-family: plumb-bl
    font-size: 18px

    margin-bottom: 25px

    text-transform: uppercase

  &-link
    font-family: plumb-bo

    display: inline-block

    max-width: 120px
    padding-left: 35px

    color: #000

    text-decoration: none

    background-position: left top
    background-repeat: no-repeat

    &:hover
      cursor: pointer

    &__excel
      background-image: url('../i/downloads-icon-excel.png')

    &__pdf
      background-image: url('../i/downloads-icon-pdf.png')

    &-info
      font-family: plumb-re

      display: block

      margin-top: 10px

      opacity: .69

  &-catalog
    padding: 30px 40px
    margin-bottom: 15px

    background: $grey-xl

    &-access
      margin: 45px 0 35px

  &-instruction
    padding: 25px 33px
    border: 8px solid $grey-xl

.arrow
  position: relative

  display: inline-block

  padding: 5.5px 8px

  color: #000

  text-transform: uppercase
  text-decoration: none

  border: 5px solid $yellow

  &:after
    position: absolute
    top: -5px
    right: -20px

    display: inline-block
    width: 20px
    height: 37px

    background: no-repeat left top $grey-xl url('../i/arrow.png')

    content: ''

.paranja
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0

  background: rgba(27, 41, 55, .95)

.contacts
  font-family: calibri-bo
  font-size: 18px
  font-weight: normal

  margin-top: 15px

  color: $blue-d

  clearfix()

  &-addr,
  &-phones
    float: left

  &-addr
    width: 380px
    margin-right: 20px

  & a:link,
  & a:visited
    color: $blue-d
    text-decoration: none

    &:hover,
    &:active
      color: $brown-l

.main
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  background-image: url('../i/bg-main.jpg')

  &-where
    font-size: 14px

  &-services
    font-family: plumb-bo
    font-size: 15px

    margin-top: 120px
    list-style: none

    clearfix()

    &-item
      float: left

      padding-top: 70px
      margin-left: 100px
      width: 120px

      background: no-repeat left top url('../i/services-icons.png')

      &:first-child
        margin-left: 0

      &__template
        background-position: -150px top

      &__sewing
        background-position: -300px top

      &__special
        background-position: -450px top

.wholesalers
  &-first-order
    font-size: 16px
    margin-top: 65px

.advantages
  position: relative

  width: 615px
  margin-top: 60px
  padding: 35px 0 30px

  border-top: 1px solid $grey-xl
  border-bottom: 15px solid $grey-xl

  &-title
    position: absolute
    left: 100px
    top: -38px

    font-family: plumb-bl
    font-size: 18px

    display: inline-block
    padding: 0 10px

    color: $grey-xxd
    background-color: #fff
    text-transform: uppercase

  &-list
    list-style: none
    display: flex
    flex-wrap: wrap

  &-item
    font-family: plumb-bo
    font-size: 18px

    width: 23%
    margin-right: 2%
    margin-bottom: 50px

    color: $grey-xxd

    &-icon
      display: block

      height: 51px
      margin-bottom: 10px

      background-repeat: no-repeat
      background-position: 10px top
      background-image: url('../i/advantages-icons.png')

    &__orders &-icon
      background-position-y: -66px

    &__documents &-icon
      background-position-y: -126px

    &__warranty &-icon
      background-position-y: -184px

    &__sale &-icon
      background-position-y: -255px

    &__payment &-icon
      background-position-y: -309px

    &__examples &-icon
      background-position-y: -371px

    &__ad &-icon
      background-position-y: -436px

    &__warranty,
    &__sale,
    &__payment,
    &__ad
      margin-bottom: 0

