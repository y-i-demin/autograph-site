a
  transition: color 0.25s ease-out

h1,
h3
  font-weight: normal
  color: $blue-d

h1,
h2
  font-family: plumb-bo
  text-transform: uppercase

h1
  font-size: 62px
  max-width: 580px

h2
  font-weight: normal
  font-size: 40px

  margin-bottom: 40px

  color: $grey-xxd

h3
  font-size: 32px
  max-width: 500px

p
  margin-bottom: 25px

.row
  width: $page-width
  margin: 0 auto

  box-sizing: border-box

  clearfix()

  &-shift
    padding: 0 100px

.goods
  &-about
    font-family: plumb-bo
    font-weight: normal
    font-size: 22px

    max-width: 570px

    color: $grey-xxd

  &-info
    padding-top: 375px

    &__covers
      background: no-repeat left top url('../i/seat-covers.png')

  &-behaviour
    position: relative

    font-size: 19px

    min-height: 365px
    max-width: 400px
    padding-left: 115px
    padding-top: 50px

    color: $grey-xxd

    &-list
      display: table
      list-style: none

    &-item
      max-width: 370px
      margin-bottom: 30px

    &-img
      position: absolute
      left: -220px
      top: 0

      display: block

      width: 296px
      height: 450px

      background-repeat: no-repeat
      background-position: left top

      &__cover
        background-image: url('../i/goods-cover.png')

    &-icon
      padding-left: 70px

      background-repeat: no-repeat
      background-position: left top

      &__cover
        background-image: url('../i/behaviours-icons-cover.png')

        &_2
          background-position: left -120px

        &_3
          height: 77px
          padding-top: 5px
          background-position: left -220px

.incut
  font-size: 19px

  margin: 30px 0
  padding: 30px 0

  color: #fff

  &__covers
    background: no-repeat left top url('../i/incut-covers.png')

.warranty
  font-size: 38px

  margin: 80px 0

  color: $grey-xxd
  text-align: center

  &-separator
    height: 15px
    margin-bottom: 40px

    background-color: $grey-xl

  & B
    display: block

    font-family: plumb-bo
    font-weight: normal

    text-transform: uppercase

.columns
  clearfix()

  &-item
    float: left
    width: 300px
    margin-left: (($page-width - @width * 3) / 2)

    &:first-child
      margin-left: 0

  &-link:link,
  &-link:visited
    font-size: 14px

    text-transform: uppercase
    color: $brown-l

    &:hover,
    &:active
      text-decoration: none

.covers-for
  list-style: none

  clearfix()

  & LI
    float: left
    min-width: 220px
    margin-bottom: 20px

.portfolio
  margin: 50px 0 70px

.downloads
  font-size: 14px

  float: right

  width: 275px
  margin-left: 20px

  clearfix()

  &-title
    font-family: plumb-bl
    font-size: 18px

    margin-bottom: 25px

    text-transform: uppercase

  &-link
    font-family: plumb-bo

    display: inline-block

    max-width: 120px
    padding-left: 35px

    color: #000

    text-decoration: none

    background-position: left top
    background-repeat: no-repeat

    &:hover
      cursor: pointer

    &__excel
      background-image: url('../i/downloads-icon-excel.png')

    &__pdf
      background-image: url('../i/downloads-icon-pdf.png')

    &-info
      font-family: plumb-re

      display: block

      margin-top: 10px

      opacity: .69

  &-catalog
    padding: 30px 40px
    margin-bottom: 15px

    background: $grey-xl

    &-access
      margin: 45px 0 35px

  &-instruction
    padding: 25px 33px
    border: 8px solid $grey-xl

.arrow
  position: relative

  display: inline-block

  padding: 5.5px 8px

  color: #000

  text-transform: uppercase
  text-decoration: none

  border: 5px solid $yellow

  &:after
    position: absolute
    top: -5px
    right: -20px

    display: inline-block
    width: 20px
    height: 37px

    background: no-repeat left top $grey-xl url('../i/arrow.png')

    content: ''