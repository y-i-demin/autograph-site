$column-width = 320px
$column-height = 160px

.header
  width: $page-width
  margin: 0 auto
  padding: 30px 0 40px

  clearfix()

  &-logo,
  &-ls,
  &-rs
    float: left
    height: $column-height

  &-logo
    display: block
    width: $page-width - ($column-width * 2)

    background: no-repeat center center url('../i/logo-header.png')

    .main &
      background-image: url('../i/logo-header-m.png')

  &-ls,
  &-rs
    width: $column-width

  &-ls
    text-align: right

  &-navigation
    border-top: 1px solid $grey-l
    padding-top: 20px

    white-space: nowrap

    .main &
      border-color: $m-blue-l

    &-item:link,
    &-item:visited
      font-size: 15px

      text-transform: uppercase
      text-decoration: none

      color: $blue-l

      .main &
        color: $m-blue-xl

    &-item:hover,
    &-item:active,
    &-item__active
      color: $brown-l !important

  &-ls &-navigation-item
    padding-left: 40px

    &:first-child
      padding-left: 0

  &-rs &-navigation-item
    padding-right: 40px

    &:last-child
      padding-right: 0

  &-contacts
    height: 45px
    padding-top: 10px

    font-family: plumb-me
    font-size: 14px

    color: $blue-d

    .main &
      color: #fff

  &-icon
    display: inline-block

    width: 20px
    height: @width
    margin-right: 10px

    background: no-repeat left top url("data:image/png;base64,")

    &__fb
      background-position: -20px top

